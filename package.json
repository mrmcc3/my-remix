{
  "name": "my-remix",
  "description": "My Remix Template",
  "repository": "https://github.com/mrmcc3/my-remix.git",
  "author": "Michael McClintock <michael.mcclintock@hey.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "0.0.0-experimental-f88eb375",
    "@remix-run/react": "0.0.0-experimental-f88eb375",
    "mime": "^3.0.0",
    "nanoid": "^3.1.30",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "0.0.0-experimental-f88eb375"
  },
  "devDependencies": {
    "@remix-run/dev": "0.0.0-experimental-f88eb375",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "concurrently": "^6.4.0",
    "esbuild": "0.13.14",
    "miniflare": "^2.0.0-rc.3",
    "tailwindcss": "^3.0.6"
  },
  "scripts": {
    "postinstall": "remix setup cloudflare-workers",
    "build": "tailwindcss -i src/global.css -o app/global.css --minify && remix build && esbuild --bundle src/worker.js --outfile=public/_worker.js --define:process.env.NODE_ENV='\"production\"' --format=esm --minify",
    "build:wrangler": "yarn build --external:__STATIC_CONTENT_MANIFEST",
    "watch:css": "npx tailwindcss -i src/global.css -o app/global.css -w",
    "watch:remix": "remix watch",
    "watch:worker": "esbuild --bundle src/worker.js --outfile=public/_worker.js --define:process.env.NODE_ENV='\"development\"' --external:__STATIC_CONTENT_MANIFEST --format=esm --watch",
    "watch:miniflare": "miniflare --build-command -w",
    "dev": "concurrently -n tailwind,remix,worker,miniflare \"yarn watch:css\" \"yarn watch:remix\" \"yarn watch:worker\" \"yarn watch:miniflare\""
  },
  "sideEffects": false,
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
