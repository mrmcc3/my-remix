{
  "name": "my-remix",
  "description": "My Remix Template",
  "repository": "https://github.com/mrmcc3/my-remix.git",
  "author": "Michael McClintock <michael.mcclintock@hey.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "0.0.0-experimental-c73398fb",
    "@remix-run/react": "0.0.0-experimental-c73398fb",
    "mime": "^3.0.0",
    "nanoid": "^3.1.30",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "0.0.0-experimental-c73398fb"
  },
  "devDependencies": {
    "@remix-run/dev": "0.0.0-experimental-c73398fb",
    "@tailwindcss/forms": "^0.4.0",
    "concurrently": "^6.4.0",
    "esbuild": "0.13.14",
    "miniflare": "2.0.0-next.3",
    "tailwindcss": "^3.0.0"
  },
  "scripts": {
    "postinstall": "remix setup cloudflare-workers",
    "build": "tailwindcss -i src/global.css -o app/global.css --minify && remix build && esbuild --bundle src/worker.js --outfile=public/_worker.js --define:process.env.NODE_ENV='\"production\"' --format=esm --minify",
    "build:wrangler": "yarn build --external:__STATIC_CONTENT_MANIFEST"
  },
  "sideEffects": false,
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}