{
  "name": "my-remix",
  "description": "My Remix Template",
  "repository": "https://github.com/mrmcc3/my-remix.git",
  "author": "Michael McClintock <michael.mcclintock@hey.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.0.6",
    "@remix-run/react": "^1.0.6",
    "mime": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@remix-run/dev": "^1.0.6",
    "@types/mime": "^2.0.3",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "concurrently": "^6.4.0",
    "miniflare": "^1.4.1",
    "tailwindcss": "^2.2.19"
  },
  "scripts": {
    "postinstall": "remix setup cloudflare-workers",
    "build": "tailwindcss -i src/styles.css -o app/styles.css --minify && remix build",
    "build:worker": "esbuild src/worker.ts --outfile=dist/worker.mjs --define:process.env.NODE_ENV='\"production\"' --external:__STATIC_CONTENT_MANIFEST --bundle --format=esm --minify",
    "watch:css": "npx tailwindcss -i src/styles.css -o app/styles.css -w",
    "watch:remix": "remix watch",
    "watch:worker": "esbuild src/worker.ts --outfile=dist/worker.mjs --define:process.env.NODE_ENV='\"development\"' --external:__STATIC_CONTENT_MANIFEST --bundle --format=esm --watch",
    "watch:miniflare": "echo '{}' > dist/__STATIC_CONTENT_MANIFEST && miniflare --build-command --modules-rule Text=__STATIC_CONTENT_MANIFEST -w",
    "dev": "concurrently -n tailwind,remix,worker,miniflare \"yarn watch:css\" \"yarn watch:remix\" \"yarn watch:worker\" \"yarn watch:miniflare\""
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
