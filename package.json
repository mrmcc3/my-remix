{
  "name": "my-remix",
  "description": "My Remix Template",
  "repository": "https://github.com/mrmcc3/my-remix.git",
  "author": "Michael McClintock <michael.mcclintock@hey.com>",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "nanoid": "^3.1.30",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.3",
    "@remix-run/serve": "^1.4.3",
    "@tailwindcss/forms": "^0.4.1",
    "@tailwindcss/typography": "^0.5.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.24",
    "wrangler": "^0.0.28"
  },
  "scripts": {
    "css:build": "tailwindcss -i app/styles.css -o app/global.css --minify",
    "css:watch": "npx tailwindcss -i app/styles.css -o app/global.css -w",
    "remix:build": "CF_PAGES=1 remix build",
    "remix:watch": "CF_PAGES=1 remix watch",
    "remix:dev": "remix dev",
    "wrangler:dev": "wrangler pages dev public --do EXAMPLE=ExampleDO",
    "build": "run-s css:build remix:build",
    "dev-cf": "run-p css:watch remix:watch wrangler:dev",
    "dev": "run-p css:watch remix:dev"
  }
}
